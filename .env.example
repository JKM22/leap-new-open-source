# Development Environment Variables
NODE_ENV=development

# Database
DATABASE_URL=postgresql://leap_dev:leap_dev_password@localhost:5432/leap_dev

# Event Bus Configuration
EVENT_BUS_TYPE=nats
NATS_SERVERS=nats://localhost:4222
KAFKA_BROKERS=localhost:9092
GCP_PROJECT_ID=your-gcp-project

# API Keys (set these as Encore secrets in production)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# GCP Configuration (for deployment)
GCP_PROJECT_ID=your-gcp-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:4000/ws

# Development Tools
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://leap_dev:leap_dev_password@localhost:5432/leap_dev

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=debug

# Feature Flags
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_CODE_DEPLOYMENT=true
ENABLE_ADVANCED_TEMPLATES=true
ENABLE_USER_AUTHENTICATION=false
